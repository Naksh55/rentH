<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#64B5F6"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/propertydp"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/baseline_add_box_24"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nameofproperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/propertydp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="House"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stateofproperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameofproperty"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="State: California"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priceofproperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stateofproperty"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="$120"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
