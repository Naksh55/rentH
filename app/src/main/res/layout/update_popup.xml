<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/updateDetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Update Details"
        android:background="@color/light_blue"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/nameofpTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of property"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/nameofpET"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Enter name of property"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/update"/>

    <TextView
        android:id="@+id/descriptionofpTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discription of property"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/descriptionofpET"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Enter discription of property"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/update"/>

    <TextView
        android:id="@+id/priceofpTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price of property"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/priceofpET"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Enter price of property"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/update"/>

    <TextView
        android:id="@+id/formdateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Date"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

<!--    <ImageView-->
<!--        android:id="@+id/fromDateImg"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/baseline_date_range_24"-->
<!--        android:layout_gravity="center"/>-->

    <EditText
        android:id="@+id/fDate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="From Date"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/update"/>
    <TextView
        android:id="@+id/tomdateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Date"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
<!--    <ImageView-->
<!--        android:id="@+id/toDateImg"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/baseline_date_range_24"-->
<!--        android:layout_gravity="center"/>-->



    <EditText
        android:id="@+id/tDate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="To date"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/update"/>

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textSize="21dp"
        android:backgroundTint="@color/light_blue"
        android:textAllCaps="false"
        android:background="@drawable/update"
        android:gravity="center"
        />
</LinearLayout>