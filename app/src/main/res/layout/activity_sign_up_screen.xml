<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent=".1"
            android:orientation="vertical"
            android:id="@+id/guide_v_10" />
        <ImageView
            android:id="@+id/login_photo"
            android:layout_width="410dp"
            android:layout_height="400dp"
            android:src="@drawable/loginimage"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="50sp"

            android:layout_marginLeft="35sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_photo"
            android:id="@+id/tvSignUp"
            />


        <TextView
            android:id="@+id/signupAs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="SignUp as:"
            android:layout_marginLeft="11sp"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            app:layout_constraintTop_toBottomOf="@+id/tvSignUp"

            />

        <RadioGroup
            android:id="@+id/person2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvSignUp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            >
            <RadioButton
                android:id="@+id/u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="20sp"
                android:layout_marginLeft="130sp"
                />
            <RadioButton
                android:id="@+id/o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner"
                android:textSize="20sp"
                />
        </RadioGroup>

        <!--username-->
        <!--username-->
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Email"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/signupAs"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            android:layout_marginTop="10sp"/>

        <EditText
            android:id="@+id/etemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/emailTV"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"/>

        <!--password-->
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Password"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/etemail"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Create password"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:inputType="textPassword"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            android:id="@+id/etPassword"/>

        <!--    confirm password-->
        <TextView
            android:id="@+id/ConfirmPasswordTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            android:textSize="25sp"
            android:layout_marginLeft="6sp"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Re-enter your password"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:inputType="textPassword"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/ConfirmPasswordTV"
            app:layout_constraintStart_toStartOf="@id/guide_v_10"
            android:id="@+id/etConfirmPassword"
            />



        <!--    signup button-->
        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:layout_marginBottom="27dp"
            app:layout_constraintTop_toBottomOf="@id/etConfirmPassword"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
