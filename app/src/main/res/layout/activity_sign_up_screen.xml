<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginbkg"

    >

        <androidx.constragintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".SignUpScreen"

            >


                <!-- Your other views go here -->

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_v_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tvSignUp"
                    android:layout_marginTop="200dp"
                    android:textColor="@color/light_blue"/>

                <RadioGroup
                    android:id="@+id/person2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvSignUp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/guide_v_10">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:id="@+id/u"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="130sp"

                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/o"
                            android:text="Owner"
                            android:textColor="@color/black"

                            android:layout_marginTop="25dp"

                            android:textSize="20sp"

                            />
                </RadioGroup>

                <TextView
                    android:id="@+id/signupAs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Sign up as:"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="@id/guide_v_10"
                    app:layout_constraintTop_toBottomOf="@+id/tvSignUp"

                    />



                <EditText
                    android:id="@+id/etemail"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="Enter your email"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:background="@drawable/customedittxt"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:layout_marginTop="30sp"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/signupAs"
                    app:layout_constraintStart_toStartOf="@id/guide_v_10"
                    />


                <ImageView
                    android:id="@+id/password_toggle"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/password"
                    app:layout_constraintStart_toEndOf="@+id/etPassword"
                    app:layout_constraintTop_toBottomOf="@+id/etemail"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    />


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="Enter your password"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:layout_marginTop="30sp"

                    android:background="@drawable/customedittxt"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/baseline_lock_24"


                    android:textSize="20sp"
                    android:drawablePadding="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/etemail"
                    app:layout_constraintStart_toStartOf="@id/guide_v_10"
                    android:id="@+id/etPassword"
                    />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="Confirm password"
                    android:textColor="@color/black"
                    android:textColorHint="#808080"
                    android:layout_marginTop="30sp"

                    android:background="@drawable/customedittxt"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/baseline_lock_24"


                    android:textSize="20sp"
                    android:drawablePadding="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/etPassword"
                    app:layout_constraintStart_toStartOf="@id/guide_v_10"
                    android:id="@+id/etConfirmPassword"
                    />


                <Button
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etConfirmPassword"
                    android:layout_marginTop="40sp"
                    android:backgroundTint="@color/light_blue"
                    />


        </androidx.constragintlayout.widget.ConstraintLayout>
</ScrollView>
